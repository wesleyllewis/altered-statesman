<div class="container">
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<article>
				<p><a href="/albums">&larr; Back to Albums</a></p>
				<hr>
				<header>
					<h1>{{data.album.title}}</h1>
				</header>
				<div class="row">
					<div class="col-md-6 col-lg-6">
						{{#if data.album.image}}
							<img src="{{{cloudinaryUrl data.album.image crop='fit'}}}" class="img-responsive">
						{{/if}}
					</div>
					<div class="col-md-6 col-lg-6">
						{{data.album.webAddress}}
						<div class="well">
							{{data.album.description}}
						</div>
					</div>
				</div>
			</article>
		</div>
	</div>
</div>
